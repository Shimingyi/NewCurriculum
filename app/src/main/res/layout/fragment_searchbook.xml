<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/searchbooktype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/searchbooktype"
            android:prompt="@string/searchspinnerhint" />

        <EditText
            android:id="@+id/searchkeyword"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/searchbook_edittext"
            android:hint="@string/searchbookhint"
            android:lines="1"
            android:paddingLeft="4dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/searchbookbutton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="-2dp"
            android:background="@drawable/searchbook_button"
            android:gravity="center"
            android:padding="0dp"
            android:paddingRight="4dp"
            android:text="Search"
            android:textColor="#FFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/searchmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="暂无记录"
        android:visibility="gone" />

    <ListView
        android:id="@+id/booklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:dividerHeight="16dp"
        android:padding="2dp" >
    </ListView>

</LinearLayout>