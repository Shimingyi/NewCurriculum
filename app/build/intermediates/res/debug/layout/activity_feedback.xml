<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:color="#E5E7D2" >
 
    <!-- 标题 -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:text="@string/feedback_title"
        android:textColor="#8B8682"
        android:textSize="25dp" />
    <!-- 相对布局里面分别为反馈文本和一条分割线 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_weight="1" >

        <View
            android:id="@+id/line"
            android:layout_width="300dp"
            android:layout_height="0.3dp"
            android:layout_below="@+id/content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="#A3A3A3" />

        <TextView
            android:id="@+id/content"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/line"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp"
            android:text="@string/feedback_explain"
            android:textColor="#8B8682"
            android:textSize="15dp" />
    </RelativeLayout>

    <!-- 输入联系方式的文本框 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/connect"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/feedback_edit"
            android:hint="您的联系方式"
            android:inputType="number"
            android:textColor="#8B8682"
            android:textSize="12dp" />

        <!--  -->

        <FrameLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <EditText
                android:id="@+id/iwantosay"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:background="@drawable/feedback_edit"
                android:ems="10"
                android:gravity="left|top"
                android:height="60dp"
                android:hint="我想说"
                android:textColor="#8B8682"
                android:textSize="12dp"
                android:width="270dp" >
            </EditText>

            <Button
                android:id="@+id/sendButton"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/send_selector"
                android:gravity="center"
                android:text="@string/feedback_bt_send"
                android:textColor="#ffffff"
                android:textSize="12dp" />
        </FrameLayout>
    </LinearLayout>

    <!-- 学生在线，诚意出品 -->

    <TextView
        android:id="@+id/biaoqian3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_weight="2"
        android:text="@string/online"
        android:textColor="#8B8682"
        android:textSize="15dp" />

</LinearLayout><!-- From: file:/home/peng/git/NewCurriculum/app/src/main/res/layout/activity_feedback.xml -->