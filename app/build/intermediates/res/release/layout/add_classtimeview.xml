<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_add_curriculum_padding_horizental"
    android:background="@color/white"
    android:layout_height="wrap_content">
<TextView
    android:layout_gravity="center"
    android:layout_width="24dp"
    android:textColor="@color/text_color_gray_deep"
    android:text="@string/add_curriculum_moretime_tv"
    android:textSize="@dimen/activity_add_curriculum_text_size"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/add_curriculum_edit_margin"
        android:orientation="vertical"
        android:layout_weight="1">
        <Spinner
            android:id="@+id/add_class_spinner_week"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:entries="@array/add_curriculum_spinner_week"
            />
        <Spinner
            android:id="@+id/add_class_spinner_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:entries="@array/add_curriculum_spinner_time"/>
        </LinearLayout>
