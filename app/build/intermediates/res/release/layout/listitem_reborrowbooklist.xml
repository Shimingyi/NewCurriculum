<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@drawable/reborrowbook_item_background"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="28dp"
    android:paddingRight="28dp"
    android:paddingTop="6dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rbookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图书名"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="索书号："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rbookid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21341234"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应还日期："
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rbookdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2014.11.15"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/rbookcheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:focusableInTouchMode="false" />

</LinearLayout><!-- From: file:/C:/Users/Hao_S/AndroidStudioProjects/NewCurriculum/app/src/main/res/layout/listitem_reborrowbooklist.xml -->