<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- 背景层 -->

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="188dp"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/widget_bg"
            android:paddingRight="5dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/wid42_left"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/curriculum_jiantou_left"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/wid42_center"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="星期一"
                    android:textColor="#E38C" />

                <TextView
                    android:id="@+id/wid42_right"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/curriculum_jiantou_right"
                    android:gravity="center" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true" >

                <ImageView
                    android:id="@+id/wid42_noclass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/wid42_left1"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:gravity="center"
                            android:textColor="#000" />

                        <ImageView
                            android:id="@+id/wid42_linex1"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/curriculum_wid42_linex1" />

                        <TextView
                            android:id="@+id/wid42_left2"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:gravity="center"
                            android:textColor="#000" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/wid42_liney1"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/curriculum_wid42_liney" />

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/wid42_centerimage11"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                        <ImageView
                            android:id="@+id/wid42_centerimage12"
                            android:layout_width="match_parent"
                            android:layout_height="26dp" />

                        <ImageView
                            android:id="@+id/wid42_linex2"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/curriculum_wid42_linex2" />

                        <ImageView
                            android:id="@+id/wid42_centerimage21"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                        <ImageView
                            android:id="@+id/wid42_centerimage22"
                            android:layout_width="match_parent"
                            android:layout_height="26dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="186dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/wid42_center11"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="初始化中，\n请稍候……"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/wid42_center12"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#E38C"
                            android:textSize="14sp" />



                        <ImageView
                            android:id="@+id/wid42_linex3"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/curriculum_wid42_linex3" />

                        <TextView
                            android:id="@+id/wid42_center21"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/wid42_center22"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#E38C"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/wid42_liney2"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/curriculum_wid42_liney" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/wid42_up"
                            android:layout_width="match_parent"
                            android:layout_height="66dp" />

                        <ImageView
                            android:id="@+id/wid42_linex4"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/curriculum_wid42_linex1" />

                        <ImageView
                            android:id="@+id/wid42_down"
                            android:layout_width="match_parent"
                            android:layout_height="66dp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- 前景层 （防止背景按不到） -->

    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_gravity="left|top"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wid42_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon"
            android:gravity="bottom"
            android:textSize="18sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:text=" 课程表"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout><!-- From: file:/C:/Users/Hao_S/AndroidStudioProjects/NewCurriculum/app/src/main/res/layout/widget_4_2.xml -->