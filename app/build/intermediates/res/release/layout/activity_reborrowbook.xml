<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- button:点击登录，注销等…… textview -->

            <Button
                android:id="@+id/rebloginbutton"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/reborrow_button"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:text="请先登录"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/rebtextmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="您当前没有借阅~"
                android:visibility="gone" />

            <ListView
                android:id="@+id/reborrowbooklist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reborrowbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#C4C4C4D4"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <Button
                android:id="@+id/reborrowchooseall"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="2dp"
                android:background="@drawable/reborrow_button"
                android:gravity="top|center_horizontal"
                android:paddingTop="4dp"
                android:text="全选"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/reborrowchooseothers"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/reborrow_button"
                android:gravity="top|center_horizontal"
                android:paddingTop="4dp"
                android:text="反选"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/reborrowcancel"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/reborrow_button"
                android:gravity="top|center_horizontal"
                android:paddingTop="4dp"
                android:text="取消"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/reborrowallbutton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/reborrow_button"
                android:gravity="top|center_horizontal"
                android:paddingTop="4dp"
                android:text="一键续借"
                android:textColor="#fff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/reborrowconfrim"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/reborrow_confrimbutton"
                android:gravity="top|center_horizontal"
                android:paddingTop="4dp"
                android:text="确认续借"
                android:textColor="#fff"
                android:textSize="22sp" />
        </LinearLayout>


</FrameLayout><!-- From: file:/C:/Users/Hao_S/AndroidStudioProjects/NewCurriculum/app/src/main/res/layout/activity_reborrowbook.xml -->